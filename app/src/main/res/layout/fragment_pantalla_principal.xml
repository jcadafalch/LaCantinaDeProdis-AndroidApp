<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.principal.PantallaPrincipal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFons"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="741dp"
                android:layout_height="520dp"
                android:layout_marginBottom="372dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.536"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@mipmap/logo_foreground" />

            <TextView
                android:id="@+id/txtPprincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="casual"
                android:text="@string/txtPprincipal"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="@dimen/txtPrincipal"
                android:textStyle="bold"
                android:typeface="serif"
                app:layout_constraintBottom_toTopOf="@+id/btnPprincipalClient"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/btnPprincipalClient"
                android:layout_width="392dp"
                android:layout_height="95dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:backgroundTint="#008570"
                android:drawableLeft="@mipmap/client_foreground"
                android:text="@string/client"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/btnPprincipalCliCambCuiCaix"
                app:layout_constraintBottom_toTopOf="@+id/btnPprincipalCambrer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnPprincipalCambrer"
                android:layout_width="392dp"
                android:layout_height="95dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:backgroundTint="#008570"
                android:drawableLeft="@mipmap/cambrer_foreground"
                android:text="@string/cambrer"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/btnPprincipalCliCambCuiCaix"
                app:layout_constraintBottom_toTopOf="@+id/btnPprincipalCaixer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnPprincipalCaixer"
                android:layout_width="392dp"
                android:layout_height="95dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:backgroundTint="#008570"
                android:drawableLeft="@mipmap/caixer_foreground"
                android:text="@string/caixer"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/btnPprincipalCliCambCuiCaix"
                app:layout_constraintBottom_toTopOf="@+id/btnPprincipalCuiner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnPprincipalCuiner"
                android:layout_width="392dp"
                android:layout_height="95dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#008570"
                android:drawableLeft="@mipmap/cuiner_foreground"
                android:text="@string/cuiner"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/btnPprincipalCliCambCuiCaix"
                app:layout_constraintBottom_toTopOf="@+id/btnPprincipalAdministrador"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnPprincipalAdministrador"
                android:layout_width="374dp"
                android:layout_height="40dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#008570"
                android:text="@string/administrador"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnPprincipalCuiner"
                tools:ignore="TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>