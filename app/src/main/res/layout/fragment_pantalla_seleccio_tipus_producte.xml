<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFons">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFons"
            tools:context="fragment_pantalla_seleccio_tipus_producte">

            <ImageView
                android:id="@+id/imgBocata"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtBocates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bocata"
                app:layout_constraintBottom_toTopOf="@+id/imgBegudesFredes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBocata" />

            <ImageView
                android:id="@+id/imgBegudesFredes"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBocata"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtBegudesFredes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/begudes_fredes"
                app:layout_constraintBottom_toTopOf="@+id/imgBegudesCalentes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBegudesFredes" />

            <ImageView
                android:id="@+id/imgBegudesCalentes"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBegudesFredes"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtBegudesCalentes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/begudes_calentes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBegudesCalentes" />

            <ImageButton
                android:id="@+id/btnConfirmar"
                android:layout_width="136dp"
                android:layout_height="107dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorFons"
                android:contentDescription="@string/descripcio_img_tick"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtBegudesCalentes"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_baseline_check_circle_outline_24"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>