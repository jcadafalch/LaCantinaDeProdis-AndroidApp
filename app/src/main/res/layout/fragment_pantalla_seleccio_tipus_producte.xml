<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFons">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFons"
            tools:context="fragment_pantalla_seleccio_tipus_producte">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSeleccioProducte"
                android:layout_width="413dp"
                android:layout_height="365dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="38dp"
                app:layout_constraintBottom_toTopOf="@+id/btnConfirmar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.recyclerview.widget.RecyclerView>

            <ImageButton
                android:id="@+id/btnConfirmar"
                android:layout_width="136dp"
                android:layout_height="107dp"
                android:layout_marginStart="93dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="182dp"
                android:background="@color/colorFons"
                android:contentDescription="@string/descripcio_img_tick"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewSeleccioProducte"
                app:srcCompat="@drawable/ic_baseline_check_circle_outline_24"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>