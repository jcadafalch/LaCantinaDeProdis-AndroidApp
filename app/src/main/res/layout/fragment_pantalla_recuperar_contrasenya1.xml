<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.principal.PantallaRecuperarContrasenya1">

   <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:background="@color/colorFons">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <ImageView
               android:id="@+id/imageViewLogo"
               android:layout_width="366dp"
               android:layout_height="268dp"
               android:layout_marginStart="27dp"
               android:layout_marginEnd="27dp"
               android:background="@mipmap/logo_foreground"
               android:contentDescription="@string/logo_lacantinadeprodis"
               android:scaleType="fitCenter"
               app:layout_constraintBottom_toTopOf="@+id/txtPRecuperarContrasenya1_info"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.555"
               app:layout_constraintStart_toStartOf="parent" />

           <TextView
               android:id="@+id/txtPRecuperarContrasenya1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="225dp"
               android:text="@string/recuperar_contrasenya"
               android:textAlignment="center"
               android:textSize="@dimen/txtSubTitol"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/txtPRecuperarContrasenya1_info"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:text="@string/text_recuperar_contrasenya"
               android:textAlignment="center"
               android:textSize="@dimen/txtGran"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/txtPRecuperarContrasenya1"
               tools:ignore="TextContrastCheck,TextContrastCheck" />

           <TextView
               android:id="@+id/txtPRecuperarContrasenya1_DNI"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/marginRight"
               android:layout_marginTop="55dp"
               android:text="@string/introdueix_el_dni"
               android:textColor="#00796B"
               android:textSize="@dimen/txtMig"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/txtPRecuperarContrasenya1_info" />

           <EditText
               android:id="@+id/dtTxtPRecuperarContrasenya1DNI"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/marginRight"
               android:autofillHints="nif"
               android:ems="10"
               android:hint="@string/editDni"
               android:inputType="textPersonName"
               android:maxLength="9"
               android:textSize="@dimen/txtMig"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/txtPRecuperarContrasenya1_DNI"
               tools:ignore="LabelFor,TouchTargetSizeCheck,TextContrastCheck,TextContrastCheck" />

           <Button
               android:id="@+id/btnPRecuperarContrasenya1_continuar"
               android:layout_width="0dp"
               android:layout_height="45dp"
               android:layout_marginStart="@dimen/centrat"
               android:layout_marginTop="100dp"
               android:layout_marginEnd="@dimen/centrat"
               android:layout_marginBottom="108dp"
               android:backgroundTint="@color/colorPrimary"
               android:text="@string/continuar"
               android:theme="@style/AppTheme.btnContinuar"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/dtTxtPRecuperarContrasenya1DNI"
               tools:ignore="TouchTargetSizeCheck,TextContrastCheck,TextContrastCheck" />

       </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>