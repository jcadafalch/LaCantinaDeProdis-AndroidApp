<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".principal.PantallaIniciSessioClientAdmin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFons"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="741dp"
            android:layout_height="520dp"
            android:layout_marginBottom="372dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/logo_foreground" />

        <TextView
            android:id="@+id/txtPiniciarSessioClient"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/iniciarSessio"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtPIniciarSessioClient_benvinguda"
            app:layout_constraintStart_toStartOf="@+id/dtTextPIniciarSessioClient_dni" />

        <TextView
            android:id="@+id/txtPIniciarSessioClient_benvinguda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="@string/txtPIniciarSessio_benvinguda"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/txtPIniciarSessioClient_dni"
            app:layout_constraintStart_toStartOf="@+id/dtTextPIniciarSessioClient_dni" />

        <TextView
            android:id="@+id/txtPIniciarSessioClient_dni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dni"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/dtTextPIniciarSessioClient_dni"
            app:layout_constraintStart_toStartOf="@+id/dtTextPIniciarSessioClient_dni" />

        <EditText
            android:id="@+id/dtTextPIniciarSessioClient_dni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="47dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/editDni"
            app:layout_constraintBottom_toTopOf="@+id/txtPIniciarSessioClient_contrasenya"
            app:layout_constraintStart_toStartOf="@+id/editTextNumberPassword"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/txtPIniciarSessioClient_contrasenya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contrasenya"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextNumberPassword"
            app:layout_constraintStart_toStartOf="@+id/editTextNumberPassword" />

        <EditText
            android:id="@+id/editTextNumberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="32dp"
            android:ems="10"
            android:inputType="numberPassword"
            app:layout_constraintBottom_toTopOf="@+id/btnPiniciarSessioClient"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnPiniciarSessioClient"
            android:layout_width="227dp"
            android:layout_height="42dp"
            android:layout_marginStart="92dp"
            android:layout_marginBottom="26dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/iniciarSessio"
            app:layout_constraintBottom_toTopOf="@+id/txtPiniciarSessioClient_oblidatContrasenya"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/txtPiniciarSessioClient_oblidatContrasenya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="117dp"
            android:layout_marginEnd="118dp"
            android:layout_marginBottom="35dp"
            android:clickable="true"
            android:text="@string/oblidatContrasenya"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtPiniciarSessioClient_registre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/txtPiniciarSessioClient_registre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="175dp"
            android:layout_marginEnd="175dp"
            android:layout_marginBottom="76dp"
            android:clickable="true"
            android:text="@string/registrat"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="41dp"
            android:src="@drawable/pasword_eye"
            app:layout_constraintBottom_toTopOf="@+id/btnPiniciarSessioClient"
            app:layout_constraintStart_toEndOf="@+id/editTextNumberPassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>