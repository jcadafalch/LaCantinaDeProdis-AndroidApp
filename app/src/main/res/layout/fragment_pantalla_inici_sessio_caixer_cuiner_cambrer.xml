<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".principal.PantallaIniciSessioCaixerCuinerCambrer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFons"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="741dp"
            android:layout_height="520dp"
            android:layout_marginBottom="372dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/logo_foreground" />

        <TextView
            android:id="@+id/txtPiniciarSessioClient"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/iniciarSessio"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtPIniciarSessioClient_benvinguda"
            app:layout_constraintEnd_toEndOf="@+id/txtPIniciarSessioClient_benvinguda"
            app:layout_constraintStart_toStartOf="@+id/txtPIniciarSessioClient_benvinguda" />

        <TextView
            android:id="@+id/txtPIniciarSessioClient_benvinguda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="46dp"
            android:text="@string/txtPIniciarSessio_benvinguda"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/txtPIniciarSessioClient_contrasenya"
            app:layout_constraintStart_toStartOf="@+id/txtPIniciarSessioClient_contrasenya" />

        <TextView
            android:id="@+id/txtPIniciarSessioClient_contrasenya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/contrasenya"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextNumberPassword"
            app:layout_constraintStart_toStartOf="@+id/editTextNumberPassword" />

        <EditText
            android:id="@+id/editTextNumberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="76dp"
            android:ems="10"
            android:inputType="numberPassword"
            app:layout_constraintBottom_toTopOf="@+id/btnPiniciarSessioClient"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnPiniciarSessioClient"
            android:layout_width="227dp"
            android:layout_height="42dp"
            android:layout_marginStart="92dp"
            android:layout_marginEnd="92dp"
            android:layout_marginBottom="176dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/iniciarSessio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="88dp"
            android:src="@drawable/pasword_eye"
            app:layout_constraintBottom_toTopOf="@+id/btnPiniciarSessioClient"
            app:layout_constraintStart_toEndOf="@+id/editTextNumberPassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>