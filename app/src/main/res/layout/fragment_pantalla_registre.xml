            android:text="Tens un compte?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPregistre" />

        <TextView
            android:id="@+id/textPregistre_iniciaSessio"
            android:layout_width="wrap_content"
