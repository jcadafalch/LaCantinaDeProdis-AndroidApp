<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFons">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorFons">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgTomaquet"
                        android:layout_width="216dp"
                        android:layout_height="156dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="80dp"
                        android:contentDescription="@string/descripcio_img_tomaquet"
                        app:srcCompat="@mipmap/sense_tomaquet_foreground" />

                    <CheckBox
                        android:id="@+id/checkBoxSenseTomaquet"
                        android:layout_width="@dimen/checkWidth"
                        android:layout_height="@dimen/checkHeight"
                        android:layout_gravity="center"
                        android:text="@string/sense_tomaquet"
                        android:textSize="@dimen/txtTitol" />

                    <ImageView
                        android:id="@+id/imgBossa"
                        android:layout_width="@dimen/imgBossaWidth"
                        android:layout_height="@dimen/imgBossaHeight"
                        android:layout_gravity="center"
                        android:contentDescription="@string/descripcio_img_bossa"
                        app:srcCompat="@mipmap/per_emportar_foreground" />

                    <CheckBox
                        android:id="@+id/checkBoxPerEmportar"
                        android:layout_width="@dimen/checkWidth"
                        android:layout_height="@dimen/checkHeight"
                        android:layout_gravity="center"
                        android:layout_marginTop="-20dp"
                        android:text="@string/per_emportar"
                        android:textSize="@dimen/txtTitol" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/btnConfirmar"
                                android:layout_width="214dp"
                                android:layout_height="156dp"
                                android:layout_marginEnd="@dimen/marginLandscape"
                                android:background="@color/colorFons"
                                android:contentDescription="@string/descripcio_img_tick"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_baseline_check_circle_outline_24"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <ImageButton
                                android:id="@+id/btnTornaEnrerre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/marginLandscape"
                                android:background="@color/colorFons"
                                android:contentDescription="@string/descripcio_img_fletxa"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_fletxa_enrerre"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imgProhibit"
                android:layout_width="153dp"
                android:layout_height="155dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:contentDescription="@string/descripcio_img_prohibit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2"
                app:srcCompat="@drawable/ic_baseline_block_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>